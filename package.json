{
  "name": "badgen.net",
  "description": "Badge generating service",
  "author": "Amio <amio.cn@gmail.com>",
  "license": "ISC",
  "private": true,
  "scripts": {
    "lint": "standard",
    "dev": "micro-dev service.js -s -i .next",
    "dev:web": "next",
    "build": "NODE_ENV=production next build && next export -o public",
    "pretest": "npm run lint",
    "test": "tap test/*.js --reporter spec -j12",
    "start": "node service.js",
    "now-prune": "now rm badgen.net --safe -y -S amio || true",
    "predeploy": "now -S amio inspect badgen.net",
    "deploy": "now -S amio && now -S amio alias",
    "canary": "now -S amio && now -S amio alias badgen-canary"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "dependencies": {
    "badgen": "^2.7.1",
    "badgen-icons": "^0.8.0",
    "byte-size": "^5.0.1",
    "cheerio": "^1.0.0-rc.3",
    "chrome-webstore": "^1.2.1",
    "date-fns": "^1.30.1",
    "got": "^9.6.0",
    "lodash.debounce": "^4.0.8",
    "micro": "^9.3.4",
    "micro-fork": "^2.0.0",
    "millify": "^3.0.2",
    "raven": "^2.6.4",
    "react-debounce-render": "^5.0.0",
    "semver": "^6.0.0",
    "serve-handler": "^6.0.0",
    "serve-marked": "^1.0.0"
  },
  "devDependencies": {
    "@mdx-js/mdx": "^1.0.19",
    "@zeit/next-mdx": "^1.2.0",
    "babel-eslint": "^10.0.1",
    "micro-dev": "^3.0.0",
    "next": "^8.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "standard": "^12.0.1",
    "supertest": "^4.0.2",
    "tap": "^13.1.8"
  }
}
