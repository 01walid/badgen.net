{
  "version": 2,
  "alias": [
    "v2.badgen.net"
  ],
  "regions": ["sfo", "lhr", "hnd"],
  "builds": [
    { "src": "endpoints/*.ts", "use": "@now/node" },
    { "src": "package.json", "use": "@now/static-build", "config": {
      "distDir": "out"
    } }
 ],
  "routes": [
    { "src": "/(?<name>[^/]+)/.*", "dest": "/endpoints/$name.ts" }
  ],
  "env": {
    "GH_TOKEN": "@badgen-gh-tokens",
    "SENTRY_URI": "@badgen-sentry-uri",
    "TRACKING_GA": "@badgen-tracking-ga"
  },
  "github": {
    "autoAlias": false
  }
}
